{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/app/*"],
      "@env/*": ["src/environments/*"],
      "@ofd/ui-checkbox": ["libs/ui-checkbox/src/index.ts"],
      "@ofd/ui-select": ["libs/ui-select/src/index.ts"]
    },
    "rootDir": ".",
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "tmp"]
}
